-#  This file is app/views/item/index.html.haml
%h1 All Inventory items

%table#inventory
  %thead
    %tr
      %th= link_to "Item Name", :sort => "title"
      %th Description
      %th= link_to  "Checked Out", :sort => "checked_out"
      %th= link_to "Total Quantity", :sort => "quantity"
      %th= link_to "Remaining", :sort => "remaining"
      %th More Details
  %tbody
    - @item.each do |item|
      %tr
        %td= item.title
        %td= item.description
        %td= item.checked_out
        %td= item.quantity
        %td= (item.quantity - item.checked_out)
        %td= link_to "Details about #{item.title}", item_path(item)
