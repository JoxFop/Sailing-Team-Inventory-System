-# This file is app/views/users/index.html.haml
%h1 All Users

%button= button_to 'Create New User', {:controller => 'users', :action => 'add'}, {:method => 'get'}

%table#users
  %thead
    %tr
      %th Username
      %th Email
      %th Permission
  %tbody
    - @users.each do |user|
      %tr
        %td
          = link_to "#{user.username}", user_path(user)
        %td
          = user.email
        %td
          = user.permission